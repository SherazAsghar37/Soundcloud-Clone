<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<script>
    const done = async () => {
        await window.opener.postMessage({
            token: '<%= token %>',
        }, '*');
        window.close()
    };
</script>

<body style="display: flex; justify-content: center; margin-top: 150px;">
    <div style="width: 70%; text-align: center;">
        <div style="display: flex; align-items: center; justify-content: center;">
            <img src="/PNGs/done2PNG.jpg" alt="Tick Logo">
            <h1 style="font-weight: 900; font-size: x-large;">Authentication Done</h1>
        </div>
        <p style="color: gray; text-align: start;">The Login Process has been completed. Now You can return to the main
            page.</p>
        <button
            style="border: none; background-color: rgb(82, 189, 0); color: white; padding: 8px; border-radius: 5px; cursor: pointer;"
            onclick="done()">Go Back</button>
    </div>
</body>

</html>